<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
        <link href="/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
        <link href="/css/style.css" type="text/css" rel="stylesheet" />

        {% endblock %}
        <title>BDD Wizard</title>
    </head>
    <body>

        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/">{{ "hbw.app.title" | trans }}</a>

                    <div class="nav-collapse">
                        <ul class="nav">
                            <li><a href="/"><i class="icon-white icon-home"></i> {{ "hbw.menu.home" | trans }}</a></li>
                            <li><a href="/edit"><i class="icon-white icon-plus-sign"></i> {{ "hbw.menu.new" | trans }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container page">

            <section>
                <h2>{% block title %}{% endblock %}</h2>
                <div id="content">
                    {% block body %}{% endblock %}
                </div>
            </section>

        </div>
        <script src="/js/jquery.min.js"></script>
        <script src="/js/jquery/jquery.easing.1.3.js"></script>
        <script src="/js/jquery/quicksand/jquery.quicksand.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        <script src="/bootstrap/js/bootstrap-tooltip.js"></script>
        <script src="/js/hbw.js"></script>
        <script src="/js/hbw/domain.js"></script>
        <script src="/js/hbw/domain/feature.js"></script>
        <script src="/js/hbw/domain/exception.js"></script>
        <script src="/js/hbw/domain/step.js"></script>
        <script src="/js/hbw/domain/scenario.js"></script>
        <script src="/js/hbw/domain/outline.js"></script>
        <script src="/js/hbw/ui.js"></script>
        <script src="/js/hbw/ui/listing.js"></script>
        <script src="/js/hbw/ui/editing.js"></script>
        <script src="/js/hbw/ui/editing/events.js"></script>
        <script src="/js/hbw/ui/editing/mapper.js"></script>
        {% block javascript %}{% endblock %}
    </body>
</html>
